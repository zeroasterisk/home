"tabs/indent
set autoindent     " auto/smart indent
set smartindent    " ^^^
set bs=2           " smart backspace
set tabstop=4      " indent is 4 chars wide
set shiftwidth=4   " << >> use 4
set softtabstop=4  " should match tabstop, handling differences in width
set shiftround     " << >> find the nearest 'tabstop'
set smarttab       " pressing tab also rounds to nearest
set noexpandtab    " put tabs in files. <<<
" note: two spacing profiles exist
" :source ~/.vimrc-spaces
" :source ~/.vimrc-tabs
" (look for shortcuts to switch, in the leader sections)
"nnoremap <leader><leader><space> :source ~/.vimrc-spaces
"nnoremap <leader><leader><tab> :source ~/.vimrc-tabs

